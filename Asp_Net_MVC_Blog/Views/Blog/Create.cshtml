@model Asp_Net_MVC_Blog.Models.sınıflar.makale

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">

    CKEDITOR.replace('editor')

</script>
<h2>Makale Ekle</h2>


<div class="form">
    @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {@Html.AntiForgeryToken(); @*verilerin guvenli bir sekılde gonderlmesini saglar*@

    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Makale Başlık <span class="required">*</span></label>
        <div class="col-lg-10">
            <input class="form-control" id="cname" name="Mbaslik" minlength="5" type="text" required />
        </div>
    </div>

    <div class="form-group ">
        <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
        <div class="col-lg-10">
            @Html.DropDownList("Kid", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Makale Özet <span class="required">*</span></label>
        <div class="col-lg-10">
            <textarea name="Mözet" class="ckeditor"></textarea>
        </div>
    </div>
    <div class="form-group ">
        <label for="cemail" class="control-label col-lg-2">Makale İçerik<span class="required">*</span></label>
        <div class="col-lg-10">
            <textarea name="Micerik" class="ckeditor"></textarea>
        </div>
    </div>
    <div class="form-group ">
        <label for="curl" class="control-label col-lg-2">Makale Resim</label>
        <div class="col-lg-10">
            <input required type="file" class="form-control " name="Mresim" accept=".jpg,.png,.jpeg" />
        </div>
    </div>
    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Makale Tarih<span class="required">*</span></label>
        <div class="col-lg-10">
            <input class="form-control" id="tarih" name="Mtarih" minlength="5" type="text" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button class="btn btn-primary" type="submit"> Ekle    </button>
            <button class="btn btn-danger" type="button"><a href="/Blog/Index"> İptal  </a>   </button>
        </div>
    </div>


}


</div>



@*</form>*@


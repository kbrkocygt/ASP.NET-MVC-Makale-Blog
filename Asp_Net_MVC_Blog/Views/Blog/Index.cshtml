@model IEnumerable<Asp_Net_MVC_Blog.Models.sınıflar.makale>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
<script type="text/javascript">

     $(document).ready(function () {
         $('#myTable').DataTable(


             {
                 "language": {
                     "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                 }
             }

         );



    });


</script>
    <h2>Makale Kayıtları</h2>

<a class="btn-group" href="/Blog/Create"> Yeni Makele Oluştur </a>
    <table class="table  table-striped"  id="myTable">
        <thead>
            <tr>
                <th>#</th>
                <th>Makale baslik </th>
                <th>Kategori</th>
                <th>Makale özet </th>
                <th>Makale icerik</th>
                <th>Makale tarih  </th>
                <th>Makale resim</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th>@item.Mid</th>
                <th>@item.Mbaslik </th>
                <th>@item.kategori.Kadi</th>
                <th>@item.Mözet </th>
                <th>@item.Micerik</th>
                <th>@item.Mtarih</th>
                <th><img src="@item.Mresim" width="100" height="100" /></th>
                <th><a href="/Blog/Edit/@item.Mid">Güncelle</a> <a href="/Blog/Delete/@item.Mid"> Sil </a></th>
            </tr>
            }





        </tbody>
        </table>

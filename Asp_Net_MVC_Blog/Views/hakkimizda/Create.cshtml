
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Ekle</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="create" method="post" action="/hakkimizda/Create" enctype="multipart/form-data">
       
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama<span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="aciklama" class="ckeditor" required></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input class="form-control " id="curl" type="file" name="resim" accept=".jpg,.png,.jpeg" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
                <button class="btn btn-danger" type="button"><a href="/hakkimizda/Index"> İptal  </a>   </button>
            </div>
        </div>
    </form>
</div>
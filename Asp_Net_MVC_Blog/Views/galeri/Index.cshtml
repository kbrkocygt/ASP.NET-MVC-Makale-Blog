@model IEnumerable<Asp_Net_MVC_Blog.Models.sınıflar.galeri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Galeri</h2>
<a class="btn-default" href="/galeri/Create">Yeni Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim Başlık</th>
            <th>Resim</th>
            <th>İşlemler</th>

        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.galeriİD</td>
            <td>@item.Rbaslik</td>
            <td><img src="@item.Ryolu" width="100" height="100" /></td>
            <td><a href="/galeri/Edit/@item.galeriİD">Düzenle</a> | <a href="/galeri/Delete/@item.galeriİD">Sil </a></td>
        </tr>
        }



    </tbody>
    </table>
